<p id="notice"><%= notice %></p>

<div class="container text-center">
  <div clas="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h1>Notes</h1>

      <table>
        <thead>
          <tr>
            <th >Book</th>
            <th>Title</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @notes.each do |note| %>
            <tr>
              <td><%= note.book_id %></td>
              <td><%= note.title %></td>
              <td><%= link_to 'Show', [@user,@book, note] %></td>
              <td><%= link_to 'Edit', edit_user_book_note_path(@user,@book, note) %></td>
              <td><%= link_to 'Destroy', [@user,@book, note], method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Export', user_book_note_export_path(@user,@book, note) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Note', new_user_book_note_path(@book) %>

    </div>
    <div class="col-md-4"></div>
  <div clas="row">
</div>