<div class="container text-center">
  <div clas="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h1>Notes</h1>

      <table>
        <thead>
          <tr>
            <th >Book</th>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
            <% book.notes.each do |note| %>
                <% note.update(contenthtml:markdown(note.content)) %>
                <tr>
                    <td><%= note.book_id %></td>
                    <td><%= note.title %></td>
                    <td><%= note.contenthtml %> </td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
      </table>

      <br>

      

    </div>
    <div class="col-md-4"></div>
  </div>
</div>
