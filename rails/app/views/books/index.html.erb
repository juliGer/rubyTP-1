<p id="notice"><%= notice %></p>

<div class="container text-center">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1>Books</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th  style="font-size: 20px;" scope="col">User</th>
      <th  style="font-size: 20px;" scope="col">Name</th>
      <th  style="font-size: 20px;" scope="col">Show</th>
      <th  style="font-size: 20px;" scope="col">Edit</th>
      <th  style="font-size: 20px;" scope="col">Destroy</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td style="font-size: 20px;"><%= book.user_id %></td>
        <td style="font-size: 20px;"><%= book.name %></td>
        <% if book.name != "cuaderno_global" %>
          <td><%= link_to 'Show', [@user, book] , class:'btn btn-info'%></td>
          <td><%= link_to 'Edit', edit_user_book_path(@user, book),class:'btn btn-secondary' %></td>
          <td><%= link_to 'Destroy', [@user, book],class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', [@user, book] , class:'btn btn-info disabled'%></td>
          <td><%= link_to 'Edit', edit_user_book_path(@user, book),class:'btn btn-secondary disabled' %></td>
          <td><%= link_to 'Destroy', [@user, book],class:'btn btn-danger disabled', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to 'Export All', user_book_export_all_notes_path(@user,book) , class:'btn btn-info'%></td>
    <% end %>
    </tr>
  </tbody>
</table>
    <%= link_to 'New Book', new_user_book_path(@user),class:'btn btn-primary' %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>


