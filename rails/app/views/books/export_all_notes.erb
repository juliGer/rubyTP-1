<div class="container text-center">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1>Notes</h1>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th >Book</th>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>

        <tbody>
          <% @book.notes.each do |note| %>
            <tr>
              <td><%= @book.name %></td>
              <td><%= note.title %></td>
              <td><%= markdown(note.content) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Back', user_books_path , class:'btn btn-danger'%>

    </div>
    <div class="col-md-2"></div>
  </div>
</div>