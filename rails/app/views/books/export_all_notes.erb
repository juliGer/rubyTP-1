<div class="container text-center">
  <div clas="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h1>Notes</h1>

      <table>
        <thead>
          <tr>
            <th >Book</th>
            <th>Title</th>
            <th>Content</th>
          </tr>
        </thead>

        <tbody>
          <% @book.notes.each do |note| %>
            <% note.update(contenthtml:markdown(note.content)) %>
            <tr>
              <td><%= note.book_id %></td>
              <td><%= note.title %></td>
              <td><%= link_to 'Show', user_book_note_export_path(@user,@book, note) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Note', new_user_book_note_path(@book) %>

    </div>
    <div class="col-md-4"></div>
  </div>
</div>